<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="160dp"
    android:gravity="center"
    android:layout_marginEnd="20dp"
    android:background="@color/colorPrimaryBackground">
    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:elevation="2dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/colorPrimaryBackground"
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/card"
            android:layout_alignTop="@+id/card"
            android:layout_alignParentTop="true"
            android:elevation="1dp" />


    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/recent_song_name"
        android:layout_width="120dp"
        android:layout_height="16dp"
        android:layout_below="@+id/card"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:textAppearance="@style/song_name" />

    <TextView
        android:id="@+id/recent_artist_name"
        android:layout_width="120dp"
        android:layout_height="13dp"
        android:layout_below="@+id/recent_song_name"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/artist_name"
        android:gravity="center_vertical" />

</RelativeLayout>