<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fff"
        android:gravity="center"
        android:id="@+id/title_bar">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_guitar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:id="@+id/preference_bar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_preference"
            android:layout_width="0dp"
            android:layout_weight="75"
            android:layout_height="16dp"
            android:text="What kind of songs do you want to listen more?"
            android:textAppearance="@style/subtitle" />

        <Button
            android:id="@+id/button_next2"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:text="Next >" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="20dp"
        >
        <CheckBox android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="xxx"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="xxxxxx"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="xxx"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/aaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="xxxxxx"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/aaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="xxx"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/aaaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="xxxxxx"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>

</LinearLayout>